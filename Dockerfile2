# Build + run without needing Maven/Gradle
FROM eclipse-temurin:17-jdk-alpine AS build
WORKDIR /app
COPY App.java .
# Compile
RUN javac App.java

# Runtime image (smaller)
FROM eclipse-temurin:17-jre-alpine
WORKDIR /app
COPY --from=build /app/App.class .
EXPOSE 8080
CMD ["java", "App"]
